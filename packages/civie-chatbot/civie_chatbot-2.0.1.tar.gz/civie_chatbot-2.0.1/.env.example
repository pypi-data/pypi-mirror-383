# Civie Chatbot API - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================
# APPLICATION CONFIGURATION
# ================================
ENVIRONMENT=production
LOG_LEVEL=INFO
AUTH_TOKEN=your-secure-auth-token-here

# ================================
# LLM & AI SERVICE CONFIGURATION
# ================================
LLM_ENDPOINT=https://api.your-llm-provider.com/v1
MODELS_API_KEY=your-llm-api-key-here
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=2.0

# ================================
# EMBEDDING SERVICE CONFIGURATION
# ================================
EMBEDDING_API_URL=https://api.your-embedding-provider.com/v1

# ================================
# VECTOR DATABASE (QDRANT) CONFIGURATION
# ================================
QDRANT_URL=https://your-qdrant-instance.com:6333
QDRANT_API_KEY=your-qdrant-api-key-here

# ================================
# DATABASE CONFIGURATION
# ================================
MONGO_URI=mongodb://username:password@host:port/database
MONGO_DB_NAME=civie
MONGO_COLLECTION_NAME=cache

# ================================
# AWS S3 CONFIGURATION
# ================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=civie-rag

# ================================
# OCR SERVICE CONFIGURATION
# ================================
OCR_API_URL=https://api.your-ocr-provider.com/v1

# ================================
# EXTERNAL API SERVICES
# ================================
# LlamaIndex API (for document parsing)
LLAMAINDEX_API_KEY=your-llamaindex-api-key
LLAMAINDEX_API_URL=https://api.llamaindex.ai
USE_API_EXTRACTION=true

# Jina AI API (for web scraping)
JINA_API_KEY=your-jina-api-key
JINA_API_URL=https://r.jina.ai

# USF Re-ranker API
USF_RERANKER_API_KEY=your-reranker-api-key
RERANKER_API_URL=https://api.your-reranker-service.com/v1

# ================================
# PROCESSING CONFIGURATION
# ================================
CHUNK_SIZE=800
TOKEN_LIMIT=250
TARGET_CHUNK_SIZE=300
TARGET_SUMMARY_SIZE=100
COLLECTION_NAME=civie_site
SUMMARY_COLLECTION_NAME=recorded_hierachical_data

# File processing constraints
MAX_FILES_PER_REQUEST=5
MAX_FILE_SIZE_MB=20
FILE_HASH_ALGORITHM=sha256

# Re-ranker configuration
RERANKER_TOP_K=3

# ================================
# SECURITY CONFIGURATION
# ================================
# Add these for enhanced security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# CORS origins (comma-separated)
CORS_ORIGINS=https://civie.com,https://www.civie.com

# ================================
# MONITORING & HEALTH CHECKS
# ================================
HEALTH_CHECK_TIMEOUT=30
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# ================================
# DEVELOPMENT ONLY
# ================================
# Set to 'true' only in development
DEBUG_MODE=false
HOT_RELOAD=false
