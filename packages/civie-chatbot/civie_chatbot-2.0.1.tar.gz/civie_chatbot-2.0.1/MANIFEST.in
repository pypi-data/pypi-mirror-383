# Include the README and license
include README.md
include LICENSE

# Include requirements files
include requirements-docker.txt
include .env.example

# Include documentation
recursive-include docs *.rst *.md

# Include static files
recursive-include src/static *

# Include configuration files
include *.yaml
include *.yml
include docker-compose*.yml
include Dockerfile
include .dockerignore

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*

# Exclude test and build artifacts
prune tests
prune logs
prune temp_pdfs
prune chart
prune .pytest_cache
prune .tox
prune build
prune dist
prune *.egg-info
