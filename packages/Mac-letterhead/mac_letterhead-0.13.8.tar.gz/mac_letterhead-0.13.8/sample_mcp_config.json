{
  "mcpServers": {
    "letterhead": {
      "command": "uvx",
      "args": [
        "mac-letterhead[mcp]", "mcp"
      ],
      "description": "Generic letterhead PDF generator - style specified per tool call"
    },
    "easytocloud": {
      "command": "uvx",
      "args": [
        "mac-letterhead[mcp]", "mcp",
        "--style", "easytocloud"
      ],
      "description": "EasyToCloud letterhead (auto-resolves: ~/.letterhead/easytocloud.pdf + .css)"
    },
    "isc": {
      "command": "uvx",
      "args": [
        "mac-letterhead[mcp]", "mcp", 
        "--style", "isc",
        "--output-dir", "~/Documents/pdfs"
      ],
      "description": "ISC letterhead with custom output directory"
    },
    "personal": {
      "command": "uvx",
      "args": [
        "mac-letterhead[mcp]", "mcp",
        "--style", "personal",
        "--output-prefix", "Personal"
      ],
      "description": "Personal letterhead with custom filename prefix"
    },
    "client-acme": {
      "command": "uvx",
      "args": [
        "mac-letterhead[mcp]", "mcp",
        "--style", "client-acme",
        "--output-dir", "~/Documents/clients/acme/generated"
      ],
      "description": "ACME Corp client letterhead with custom output directory"
    },
    "business-proposals": {
      "command": "uvx",
      "args": [
        "mac-letterhead[mcp]", "mcp",
        "--style", "business-proposals",
        "--output-dir", "~/Documents/Proposals",
        "--output-prefix", "Proposal"
      ],
      "description": "Business proposal letterhead with organized output"
    }
  }
}