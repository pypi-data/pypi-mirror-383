 <transition transition_id="analyse"
             title="analyse"
             new_state="analysis"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" icon="" category="workflow" i18n:translate="">analyse</action>
  <guard>
    <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="give_answer"
             title="give_answer"
             new_state="administrative_answer"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" icon="" category="workflow" i18n:translate="">give_answer</action>
  <guard>
    <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="close"
             title="close"
             new_state="ended"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" icon="" category="workflow" i18n:translate="">close</action>
