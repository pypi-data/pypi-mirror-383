{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AddressResponseV1",
  "type": "object",
  "required": ["domain", "version", "request_hash", "items", "determinism_proof"],
  "additionalProperties": false,
  "properties": {
    "domain": {"const": "address"},
    "version": {"const": "v1"},
    "request_hash": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "human_id",
          "line1",
          "city",
          "state",
          "postal_code",
          "country",
          "locale",
          "formatted"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {"type": "string", "format": "uuid"},
          "human_id": {"type": "string", "pattern": "^ADR-[0-9A-F]{8}$"},
          "line1": {"type": "string"},
          "city": {"type": "string"},
          "state": {"type": "string"},
          "postal_code": {"type": "string"},
          "country": {"type": "string", "pattern": "^[A-Z]{2}$"},
          "locale": {"type": "string", "pattern": "^[a-z]{2}_[A-Z]{2}$"},
          "formatted": {"type": "string"}
        }
      }
    },
    "determinism_proof": {
      "type": "object",
      "required": ["algorithm", "seed_canonical", "content_hash"],
      "additionalProperties": false,
      "properties": {
        "algorithm": {"type": "string", "enum": ["uuid5+sha256"]},
        "seed_canonical": {"type": "string"},
        "content_hash": {"type": "string", "pattern": "^[a-f0-9]{64}$"}
      }
    }
  }
}
