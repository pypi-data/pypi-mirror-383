# Include important documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include INSTALL.md
include VERSION
include config.ini
include requirements.txt

# Include installation scripts
include install.sh
include install.ps1
include install.py
include print-project
include print-project.bat

# Include archive directory
