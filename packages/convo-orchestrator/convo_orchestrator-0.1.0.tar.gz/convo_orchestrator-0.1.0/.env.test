# ---------- PostgreSQL (tests and examples) ----------
PGHOST=localhost
PGPORT=55432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=postgres

# Optional DSN. If not set, the code uses the vars above.
# CHAT_PG_DSN="host=localhost port=55432 user=postgres password=postgres dbname=postgres"

# ---------- Qdrant ----------
QDRANT_HOST=localhost
QDRANT_PORT=6333

# ---------- Ollama ----------
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

# ---------- Models ----------
# Embeddings (used by tests and the APIs)
RAG_EMBED_MODEL="nomic-embed-text:latest"
# Text generation (used by FastAPI examples)
RAG_GEN_MODEL="llama3:latest"

# ---------- RAG: default collections/tables ----------
# Products example (app_chat_api for products)
RAG_Q_COLLECTION="rag_example_products"
RAG_PG_TABLE="rag_docs_example"

# If you will run the "ops" (network/operations) example instead, use:
# RAG_Q_COLLECTION="rag_example_ops"
# RAG_PG_TABLE="rag_docs_ops"

# ---------- Context window / search (optional) ----------
CTX_WINDOW_CHARS=1500
CTX_MARGIN_CHARS=150
TOPK_OPTIONS=5

# ---------- Logging defaults (conftest) ----------
LOG_LEVEL=DEBUG
LOG_JSON=true

# ---------- CI (pipelines only; leave unset locally) ----------
# CI=true
