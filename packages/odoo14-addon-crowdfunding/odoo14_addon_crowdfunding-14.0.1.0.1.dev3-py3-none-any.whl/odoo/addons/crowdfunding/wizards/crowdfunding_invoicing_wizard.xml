<odoo>
    <record id="view_crowdfunding_invoicing_wizard_form" model="ir.ui.view">
        <field name="model">crowdfunding.invoicing.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="main">
                    <field name="percentage" widget="percentage" required="True" />
                    <field name="percentage_paid" widget="percentage" />
                </group>
                <label for="vendor_bill_ids" />
                <field name="vendor_bill_ids" />
                <field name="challenge_ids" invisible="1" />
                <footer>
                    <button
                        class="btn btn-primary"
                        type="object"
                        name="action_invoice"
                        string="Create Vendor Bills"
                    />
                    <button class="btn" special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_crowdfunding_invoicing_wizard" model="ir.actions.act_window">
        <field name="name">Create Vendor Bills</field>
        <field name="res_model">crowdfunding.invoicing.wizard</field>
        <field
            name="binding_model_id"
            ref="crowdfunding.model_crowdfunding_challenge"
        />
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
