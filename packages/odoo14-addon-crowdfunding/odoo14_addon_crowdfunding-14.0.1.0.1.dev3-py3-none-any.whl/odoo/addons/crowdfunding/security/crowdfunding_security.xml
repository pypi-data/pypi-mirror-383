<odoo noupdate="1">
    <record id="module_category" model="ir.module.category">
        <field name="name">Crowdfunding</field>
    </record>

    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category" />
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>

    <record id="base.group_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
    </record>

    <record id="rule_multicompany" model="ir.rule">
        <field name="model_id" ref="model_crowdfunding_challenge" />
        <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
    </record>

    <record id="rule_portal" model="ir.rule">
        <field name="model_id" ref="model_crowdfunding_challenge" />
        <field name="groups" eval="[(4, ref('base.group_portal'))]" />
        <field
            name="domain_force"
        >user.env['crowdfunding.challenge']._domain_portal_access()</field>
    </record>

    <record id="rule_website" model="ir.rule">
        <field name="model_id" ref="model_crowdfunding_challenge" />
        <field name="groups" eval="[(4, ref('base.group_public'))]" />
        <field
            name="domain_force"
        >user.env['crowdfunding.challenge']._domain_website_access()</field>
    </record>
</odoo>
