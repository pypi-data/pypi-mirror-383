<LogLabel>:
	halign: 'left'
	text_size: self.width, dp(56)
<LogView>:
	viewclass: 'LogLabel'
	do_scroll_x: False
	RecycleBoxLayout:
		orientation: 'vertical'
		height: self.minimum_height
		size_hint_y: None
		default_size_hint: 1, None
		default_size: None, dp(56)
<LogScreen>:
	name: 'log'
	BoxLayout:
		orientation: 'vertical'
		LogView:
			level: 10
			size_hint_y: 0.9
		Button:
			text: 'Close'
			on_release: root.toggle()
			size_hint_y: 0.1