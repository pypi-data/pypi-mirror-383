<odoo>
    <template id="web_layout" inherit_id="web.layout">
        <xpath expr="//head" position="inside">
            <t t-if="channel and not channel.website_published">
                <meta name="robots" content="noindex,nofollow" />
            </t>
        </xpath>
    </template>
</odoo>
