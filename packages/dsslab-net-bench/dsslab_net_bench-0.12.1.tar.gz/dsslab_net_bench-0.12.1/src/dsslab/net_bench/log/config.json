{
    "version": 1,
    "disable_existing_loggers" : false,
    "formatters": {
        "simple": {
            "format": "%(levelname)s in %(module)s: %(message)s"
        },

    "detailed": {
        "format": "[%(levelname)s|%(module)s|line%(lineno)d] %(asctime)s: %(message)s",
        "datefmt": "%Y-%m-%dT%H:%M:%S%z"
    }},

    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple",
            "stream": "ext://sys.stdout"},

        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "WARNING",
            "formatter": "detailed",
            "filename": "src/dsslab/net_bench/log/logs/report.log",
            "maxBytes": 1000000,
            "backupCount": 3
        }},

    "loggers": {
        "root": {"level": "WARNING", "handlers": ["file"]},
        "dsslab.net_bench.mapping": {"level": "INFO", "handlers": ["stdout"]},
        "dsslab.net_bench.supplier": {"level": "INFO", "handlers": ["stdout"]},
        "dsslab.net_bench.draw": {"level": "INFO", "handlers": ["stdout"]},
        "dsslab.net_bench.processing": {"level": "INFO", "handlers": ["stdout"]},
        "WDCAPI": {"level": "INFO", "handlers": ["stdout"]}}
}


