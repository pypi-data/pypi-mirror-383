include README.md
include LICENSE
include pyproject.toml
include pytest.ini
include .env.example

# Include all Python files
recursive-include project_vectorizer *.py

# Include documentation
recursive-include docs *.md

# Exclude unnecessary files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
prune .pytest_cache
prune .venv
prune venv
prune .vectorizer
