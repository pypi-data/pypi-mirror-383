{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hla-compass/design-system": [
        "./node_modules/@hla-compass/design-system",
        "./src/stubs/design-system"
      ],
      "@hla-compass/design-system/*": [
        "./node_modules/@hla-compass/design-system/*",
        "./src/stubs/design-system/*"
      ]
    }
  },
  "include": [
    ".",
    "*.tsx",
    "*.ts",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
