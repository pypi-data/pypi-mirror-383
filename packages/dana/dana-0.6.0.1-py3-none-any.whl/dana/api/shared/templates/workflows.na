def create_agent_workflow(agent: DanaAgent, user_request: str) -> AgentCapabilityPack:
    """
    Main workflow for creating agents.
    
    Args:
        agent: The DanaAgent instance
        user_request: The user's request for creating an agent
        
    Returns:
        AgentCapabilityPack with complete agent components
    """
    log("ðŸš€ Starting agent creation workflow...")
    
    # Step 1: Analyze Requirements
    log("ðŸ“‹ Analyzing requirements...")
    requirements = analyze_requirements(agent, user_request)
    log(f"âœ… Requirements analyzed: Domain={requirements.domain}")
    
    # Step 2: Assess Knowledge Requirements
    log("ðŸ§  Assessing knowledge requirements...")
    knowledge_plan = assess_knowledge_requirements(agent, requirements)
    log(f"âœ… Knowledge plan created: {len(knowledge_plan.required_sources)} sources")
    
    # Step 3: Design Agent
    log("ðŸŽ¨ Designing agent...")
    design = design_agent(agent, requirements, knowledge_plan)
    log(f"âœ… Agent designed: {len(design.agent_declaration.capabilities)} capabilities")
    
    # Step 4: Curate Knowledge
    log("ðŸ“š Curating knowledge...")
    knowledge_pack = curate_knowledge(agent, design)
    log("âœ… Knowledge pack curated")
    
    # Step 5: Generate Agent
    log("ðŸ”§ Generating agent capability pack...")
    capability_pack = generate_agent(agent, design, knowledge_pack)
    log("âœ… Agent capability pack generated")
    
    log("ðŸŽ‰ Agent creation workflow completed successfully!")
    return capability_pack

def validate_agent_workflow(agent: DanaAgent, capability_pack: AgentCapabilityPack) -> bool:
    """
    Validate the generated agent capability pack.
    
    Args:
        agent: The DanaAgent instance
        capability_pack: The capability pack to validate
        
    Returns:
        True if validation passes, False otherwise
    """
    log("ðŸ” Starting agent validation workflow...")
    
    try:
        # Step 1: Validate structure
        log("ðŸ“‹ Validating capability pack structure...")
        if not capability_pack.agent_na or len(capability_pack.agent_na.strip()) == 0:
            log("âŒ Agent code is missing or empty")
            return False
            
        if not capability_pack.knowledge_pack:
            log("âŒ Knowledge pack is missing")
            return False
            
        if not capability_pack.metadata:
            log("âŒ Metadata is missing")
            return False
            
        log("âœ… Structure validation passed")
        
        # Step 2: Validate agent code syntax
        log("ðŸ” Validating agent code syntax...")
        if "def solve(" not in capability_pack.agent_na:
            log("âŒ Agent code missing required solve function")
            return False
            
        if "system:agent_name" not in capability_pack.agent_na and "agent " not in capability_pack.agent_na:
            log("âŒ Agent code missing agent definition")
            return False
            
        log("âœ… Agent code syntax validation passed")
        
        # Step 3: Validate knowledge pack components
        log("ðŸ“š Validating knowledge pack components...")
        if not capability_pack.knowledge_pack.common_na:
            log("âš ï¸  Common utilities are empty (warning)")
            
        if not capability_pack.knowledge_pack.resources_na:
            log("âš ï¸  Resources are empty (warning)")
            
        if not capability_pack.knowledge_pack.methods_na:
            log("âš ï¸  Methods are empty (warning)")
            
        if not capability_pack.knowledge_pack.workflows_na:
            log("âš ï¸  Workflows are empty (warning)")
            
        log("âœ… Knowledge pack validation passed")
        
        # Step 4: Validate metadata
        log("ðŸ“Š Validating metadata...")
        if not capability_pack.metadata.get("agent_info"):
            log("âŒ Agent info missing from metadata")
            return False
            
        log("âœ… Metadata validation passed")
        
        log("ðŸŽ‰ Agent validation workflow completed successfully!")
        return True
        
    except Exception as e:
        log(f"âŒ Validation workflow failed: {e}")
        return False

