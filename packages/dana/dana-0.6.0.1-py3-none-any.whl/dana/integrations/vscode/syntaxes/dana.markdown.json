{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "markdown.dana.codeblock",
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    {
      "include": "#dana-code-block"
    }
  ],
  "repository": {
    "dana-code-block": {
      "begin": "(`{3,})\\s*(dana)\\s*$",
      "beginCaptures": { 
        "1": { "name": "punctuation.definition.fenced_code.block.markdown" },
        "2": { "name": "entity.name.function.dana" }
      },
      "end": "^\\1`*$",
      "endCaptures": { 
        "1": { "name": "punctuation.definition.fenced_code.block.markdown" }
      },
      "name": "meta.embedded.block.dana",
      "contentName": "source.dana",
      "patterns": [
        {
          "include": "source.dana"
        }
      ]
    }
  }
} 