    "django.middleware.security.SecurityMiddleware",
    "django.middleware.csrf.CsrfViewMiddleware",
    "django_htmx.middleware.HtmxMiddleware",
    "hyperx.middleware.HyperXMiddleware",
    "hyperx.middleware.HyperXSecurityMiddleware",
]

