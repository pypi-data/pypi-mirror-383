# Include documentation and license files
include README.md
include README_EN.md
include LICENSE
include requirements.txt
include example.py

# Include package data
recursive-include codehealthanalyzer *.py
recursive-include codehealthanalyzer *.json
recursive-include codehealthanalyzer *.txt
recursive-include locale *.mo
recursive-include locale *.po

# Include web assets for dashboard
recursive-include codehealthanalyzer/web/static *.css
recursive-include codehealthanalyzer/web/static *.js
recursive-include codehealthanalyzer/web/templates *.html

# Exclude development and cache files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.egg-info
global-exclude .git*
global-exclude .DS_Store
global-exclude *.log