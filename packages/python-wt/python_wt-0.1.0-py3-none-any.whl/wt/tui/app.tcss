/* ===== ANIMATIONS & TRANSITIONS ===== */
* {
    transition: background 200ms, color 200ms, border 200ms;
}

Button:hover {
    transition: background 100ms;
}

DataTable > .datatable--cursor {
    transition: background 150ms;
}

/* ===== SCROLLBARS ===== */
Vertical > ScrollbarVertical {
    background: $surface;
    color: $primary;
}

Horizontal > ScrollbarHorizontal {
    background: $surface;
    color: $primary;
}

/* ===== FOCUS STYLES ===== */
*:focus {
    border: solid $accent;
}

/* ===== DISABLED STYLES ===== */
*:disabled {
    opacity: 0.5;
    color: $text-disabled;
}

Button:disabled {
    background: $panel;
    color: $text-disabled;
}

/* ===== LOADING INDICATOR ===== */
LoadingIndicator {
    color: $accent;
}

/* ===== TOOLTIPS ===== */
Tooltip {
    background: $panel;
    color: $text;
    border: solid $primary;
    padding: 0 1;
}
