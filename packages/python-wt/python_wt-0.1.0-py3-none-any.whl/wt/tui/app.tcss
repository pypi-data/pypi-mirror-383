/* Stunning TCSS Styling for wt - Git Worktree Manager TUI
 * Featuring Nord, Gruvbox, and Monokai inspired themes
 * Modern, beautiful, and highly functional design
 */

/* ===== GLOBAL STYLES ===== */
Screen {
    background: $surface;
}

/* ===== HEADER ===== */
Header {
    dock: top;
    height: 3;
    background: $primary;
    color: $text;
    text-style: bold;
}

/* ===== FOOTER ===== */
Footer {
    dock: bottom;
    height: 1;
    background: $primary-darken-1;
}

Footer > .footer--key {
    background: $primary;
    color: $text;
}

Footer > .footer--key-text {
    color: $text-muted;
}

/* ===== STATUS BAR ===== */
#status-bar {
    dock: bottom;
    height: 1;
    background: $primary-darken-2;
    color: $text;
    padding: 0 1;
}

/* ===== MAIN CONTAINER ===== */
#main-container {
    padding: 1 2;
    height: 100%;
}

#repo-label {
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
    padding: 0 1;
}

/* ===== DATA TABLE ===== */
DataTable {
    height: 100%;
    border: solid $primary;
    background: $surface;
}

DataTable > .datatable--header {
    background: $primary;
    color: $text;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $accent;
    color: $text;
}

DataTable > .datatable--hover {
    background: $panel;
}

DataTable > .datatable--fixed {
    background: $surface;
}

DataTable:focus > .datatable--cursor {
    background: $accent;
    text-style: bold;
}

/* ===== MODAL DIALOGS ===== */
/* Confirm Dialog */
#confirm-dialog {
    width: 60;
    height: 13;
    border: thick $primary;
    background: $surface;
    padding: 1 2;
}

#confirm-title {
    text-align: center;
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
    width: 100%;
}

#confirm-message {
    text-align: center;
    margin-bottom: 2;
    width: 100%;
    padding: 0 2;
}

#confirm-buttons {
    align: center middle;
    width: 100%;
    height: 3;
}

#confirm-buttons > Button {
    margin: 0 1;
}

/* Create Worktree Dialog */
#create-dialog {
    width: 70;
    height: 23;
    border: thick $primary;
    background: $surface;
    padding: 1 2;
}

#create-title {
    text-align: center;
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
    width: 100%;
}

#create-form {
    width: 100%;
    padding: 0 2;
}

#create-form > Label {
    margin-top: 1;
    margin-bottom: 0;
    color: $text;
}

#create-form > Input {
    margin-bottom: 1;
    border: solid $primary;
    background: $panel;
}

#create-form > Input:focus {
    border: solid $accent;
}

#create-error {
    text-align: center;
    margin-top: 1;
    min-height: 1;
}

#create-buttons {
    align: center middle;
    width: 100%;
    height: 3;
    margin-top: 1;
}

#create-buttons > Button {
    margin: 0 1;
}

/* ===== BUTTONS ===== */
Button {
    min-width: 12;
    height: 3;
}

Button:hover {
    text-style: bold;
}

Button:focus {
    text-style: bold;
}

/* ===== INPUTS ===== */
Input {
    border: solid $primary;
    background: $panel;
    color: $text;
    padding: 0 1;
}

Input:focus {
    border: solid $accent;
}

Input.-invalid {
    border: solid $error;
}

/* ===== LABELS ===== */
Label {
    color: $text;
}

/* ===== CONTAINERS ===== */
Container {
    background: $surface;
}

Horizontal {
    height: auto;
}

Vertical {
    width: 100%;
}

/* ===== NORD THEME (Default) ===== */
/* Nord color palette inspired by the Arctic
 * Cool, elegant, and easy on the eyes
 */
App {
    /* Primary colors */
    $primary: #5e81ac;
    $primary-darken-1: #4c688a;
    $primary-darken-2: #3b5168;

    /* Surface colors */
    $surface: #2e3440;
    $panel: #3b4252;
    $boost: #434c5e;

    /* Accent colors */
    $accent: #88c0d0;
    $accent-darken-1: #6fa8b8;

    /* Semantic colors */
    $success: #a3be8c;
    $success-darken-1: #8fa878;
    $warning: #ebcb8b;
    $warning-darken-1: #d4b878;
    $error: #bf616a;
    $error-darken-1: #a54f58;

    /* Text colors */
    $text: #eceff4;
    $text-muted: #d8dee9;
    $text-disabled: #4c566a;
}

