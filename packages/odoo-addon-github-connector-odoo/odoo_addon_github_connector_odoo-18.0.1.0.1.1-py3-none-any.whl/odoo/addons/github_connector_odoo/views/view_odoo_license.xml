<odoo>
    <record id="view_odoo_license_search" model="ir.ui.view">
        <field name="model">odoo.license</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>
    <record id="view_odoo_license_tree" model="ir.ui.view">
        <field name="model">odoo.license</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="module_version_qty" sum="Total" />
            </list>
        </field>
    </record>
    <record id="view_odoo_license_form" model="ir.ui.view">
        <field name="model">odoo.license</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            type="object"
                            name="action_open"
                            class="oe_stat_button"
                            icon="fa-cube"
                            invisible="not module_version_qty"
                            context="{'xml_id': 'action_odoo_module_version', 'field_name': 'license_id'}"
                        >
                            <field
                                name="module_version_qty"
                                string="Modules"
                                widget="statinfo"
                            />
                        </button>
                    </div>
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active"
                    />
                    <field name="image" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="Information">
                            <group>
                                <field name="website" widget="url" />
                            </group>
                            <group string="Description">
                                <field name="description" nolabel="1" colspan="2" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_odoo_license_kanban" model="ir.ui.view">
        <field name="model">odoo.license</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id" />
                <field name="image" />
                <field name="name" />
                <field name="website" />
                <field name="module_version_qty" />
                <templates>
                    <t t-name="card" class="flex-row">
                        <aside class="o_kanban_aside_full">
                            <div class="o_kanban_image_fill position-relative w-100">
                                <field
                                    name="image"
                                    alt="License image"
                                    class="h-100"
                                    widget="image"
                                    options="{'img_class': 'w-100 object-fit-contain'}"
                                    invisible="not image"
                                />
                            </div>
                        </aside>
                        <main class="pe-2">
                            <div class="oe_module_desc">
                                <h3>
                                    <field name="name" />
                                </h3>
                                <p class="oe_module_name">
                                    <t t-if="record.website.raw_value">
                                        <field name="website" />
                                    </t>
                                    <t t-if="!record.website.raw_value">
                                        <br />
                                    </t>
                                </p>
                                <span class="badge">
                                    <t t-esc="record.module_version_qty.value" />
                                </span>
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
