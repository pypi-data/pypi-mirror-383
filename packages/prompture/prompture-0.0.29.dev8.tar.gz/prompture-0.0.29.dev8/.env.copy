# Prompture Environment Variables

# Provider Configuration (REQUIRED for tests)
# Set AI_PROVIDER to one of: ollama, openai, claude
AI_PROVIDER=ollama

# OpenAI Configuration
# Required if AI_PROVIDER=openai
OPENAI_API_KEY=your-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Claude Configuration
# Required if AI_PROVIDER=claude
CLAUDE_API_KEY=your-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229

# Ollama Configuration
# Required if AI_PROVIDER=ollama
OLLAMA_URI=http://localhost:11434
OLLAMA_MODEL=gemma:latest

# LM Studio Configuration
# Required if AI_PROVIDER=lmstudio
LMSTUDIO_ENDPOINT=http://127.0.0.1:1234/v1/chat/completions
LMSTUDIO_MODEL=deepseek/deepseek-r1-0528-qwen3-8b

# Azure OpenAI Configuration
AZURE_API_KEY=
AZURE_API_ENDPOINT=
AZURE_DEPLOYMENT_ID=
AZURE_API_VERSION=

# Additional Providers (not required for tests)
# HuggingFace Configuration
HF_ENDPOINT=
HF_TOKEN=

# Local HTTP Configuration
LOCAL_HTTP_ENDPOINT=http://localhost:8000/generate
LOCAL_HTTP_MODEL=local-model

# Google Configuration
# Required if AI_PROVIDER=google
GOOGLE_API_KEY=your-api-key-here
GOOGLE_MODEL=gemini-1.5-pro

# Groq Configuration
# Required if AI_PROVIDER=groq
GROQ_API_KEY=your-api-key-here
GROQ_MODEL=llama2-70b-4096

# OpenRouter Configuration
# Required if AI_PROVIDER=openrouter
OPENROUTER_API_KEY=your-api-key-here
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Grok Configuration
# Required if AI_PROVIDER=grok
GROK_API_KEY=your-api-key-here
GROK_MODEL=grok-4-fast-reasoning