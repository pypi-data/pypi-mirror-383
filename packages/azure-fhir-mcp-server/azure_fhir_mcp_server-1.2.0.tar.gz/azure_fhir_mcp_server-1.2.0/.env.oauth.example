# Azure FHIR MCP Server OAuth Configuration Example
# Copy this to .env and modify with your actual values

# FHIR Server Configuration
fhirUrl=https://your-fhir-server.azurehealthcareapis.com/fhir
clientId=your-azure-app-client-id
clientSecret=your-azure-app-client-secret
tenantId=your-azure-tenant-id

# OAuth-enabled MCP mode
USE_FAST_MCP_OAUTH_PROXY=true
HTTP_TRANSPORT=true
FASTMCP_HTTP_PORT=9002

# Azure OAuth configuration (must align with your App registration)
FASTMCP_SERVER_AUTH_AZURE_BASE_URL=http://localhost:9002
FASTMCP_SERVER_AUTH_AZURE_REDIRECT_PATH=/auth/callback
FASTMCP_SERVER_AUTH_AZURE_IDENTIFIER_URI=api://your-azure-app-client-id
FASTMCP_SERVER_AUTH_AZURE_REQUIRED_SCOPES=user_impersonation

# Optional: add extra scopes to the authorize request (space-separated)
# FASTMCP_SERVER_AUTH_AZURE_ADDITIONAL_AUTHORIZE_SCOPES=https://your-fhir-server.azurehealthcareapis.com/.default

# Optional: override default FHIR audience scope for the OBO exchange (space-separated)
# FHIR_SCOPE=https://your-fhir-server.azurehealthcareapis.com/.default