# MANIFEST.in - Specifies additional files to include in the distribution

# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Include configuration files
include pyproject.toml
include setup.cfg
include .python-version
include Makefile

# Include requirements files
include requirements*.txt
include uv.lock

# Include the CLAUDE.md file for AI assistance
include CLAUDE.md

# Include all documentation
recursive-include docs *.md *.rst *.txt

# Include examples
recursive-include examples *.py *.md

# Include tests (optional, but good for development)
recursive-include tests *.py *.json *.yaml *.yml *.txt

# Include type stubs and py.typed marker
recursive-include src *.pyi
recursive-include src py.typed

# Include package data
recursive-include src/chuk_mcp_server *.json *.yaml *.yml *.txt *.md

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .git*
global-exclude .coverage
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude *.egg-info
global-exclude .venv
global-exclude venv
global-exclude env
global-exclude build
global-exclude dist

# Exclude editor files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~
global-exclude .*.swp

# Exclude CI/CD files (optional)
exclude .github
exclude .gitlab-ci.yml
exclude .travis.yml

# Exclude test coverage reports
exclude htmlcov
exclude .coverage.*
exclude coverage.xml
exclude *.cover