[flake8]
max-line-length = 120
extend-ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .tox,
    .eggs,
    *.egg-info
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
max-complexity = 10
