<odoo>
    <data noupdate="0">
        <record id="risk_limit_batch_assignment_viewer_group" model="res.groups">
            <field name="name">Viewer</field>
            <field
                name="category_id"
                ref="ssi_risk_limit.risk_limit_batch_assignment_workflow"
            />
        </record>
        <record id="risk_limit_batch_assignment_user_group" model="res.groups">
            <field name="name">User</field>
            <field
                name="category_id"
                ref="ssi_risk_limit.risk_limit_batch_assignment_workflow"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('risk_limit_batch_assignment_viewer_group'))]"
            />
        </record>
        <record id="risk_limit_batch_assignment_validator_group" model="res.groups">
            <field name="name">Validator</field>
            <field
                name="category_id"
                ref="ssi_risk_limit.risk_limit_batch_assignment_workflow"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('risk_limit_batch_assignment_user_group'))]"
            />
        </record>
        <record id="risk_limit_batch_assignment_company_group" model="res.groups">
            <field name="name">Company</field>
            <field
                name="category_id"
                ref="ssi_risk_limit.risk_limit_batch_assignment_data_ownership"
            />
        </record>
        <record id="risk_limit_batch_assignment_child_company_group" model="res.groups">
            <field name="name">Company and All Child Companies</field>
            <field
                name="category_id"
                ref="ssi_risk_limit.risk_limit_batch_assignment_data_ownership"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('risk_limit_batch_assignment_company_group'))]"
            />
        </record>
        <record id="risk_limit_batch_assignment_all" model="res.groups">
            <field name="name">All</field>
            <field
                name="category_id"
                ref="ssi_risk_limit.risk_limit_batch_assignment_data_ownership"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('risk_limit_batch_assignment_company_group'))]"
            />
        </record>
    </data>
</odoo>
