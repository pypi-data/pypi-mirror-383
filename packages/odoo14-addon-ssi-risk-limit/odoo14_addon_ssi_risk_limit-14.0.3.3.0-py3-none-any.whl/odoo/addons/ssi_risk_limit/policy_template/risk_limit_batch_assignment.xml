<odoo>
<record id="policy_template_risk_limit_batch_assignment" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_risk_limit_batch_assignment" />
    <field
            name="state_field_id"
            search="[('model_id.model','=','risk_limit_batch_assignment'),('name','=','state')]"
        />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- Confirm -->
<record
        id="policy_template_risk_limit_batch_assignment_confirm"
        model="policy.template_detail"
    >
    <field name="template_id" ref="policy_template_risk_limit_batch_assignment" />
    <field
            name="field_id"
            search="[('model_id.model','=','risk_limit_batch_assignment'),('name','=','confirm_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','risk_limit_batch_assignment'),('value','=','draft')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
            name="group_ids"
            eval="[(6,0,[ref('risk_limit_batch_assignment_user_group')])]"
        />
    <field name="restrict_additional" eval="0" />
</record>

<!-- Reject -->
<record
        id="policy_template_risk_limit_batch_assignment_reject"
        model="policy.template_detail"
    >
    <field name="template_id" ref="policy_template_risk_limit_batch_assignment" />
    <field
            name="field_id"
            search="[('model_id.model','=','risk_limit_batch_assignment'),('name','=','reject_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','risk_limit_batch_assignment'),('value','=','confirm')]"
        />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

