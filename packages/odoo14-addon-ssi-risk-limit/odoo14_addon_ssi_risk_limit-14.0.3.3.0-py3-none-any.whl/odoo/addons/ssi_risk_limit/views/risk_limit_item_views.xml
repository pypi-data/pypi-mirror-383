<odoo>
    <data>
        <!-- Search View -->
        <record id="risk_limit_item_view_search" model="ir.ui.view">
            <field name="name">risk_limit_item - search</field>
            <field name="model">risk_limit_item</field>
            <field
                name="inherit_id"
                ref="ssi_master_data_mixin.mixin_master_data_view_search"
            />
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data />
            </field>
        </record>

        <!-- Tree View -->
        <record id="risk_limit_item_view_tree" model="ir.ui.view">
            <field name="name">risk_limit_item - tree</field>
            <field name="model">risk_limit_item</field>
            <field
                name="inherit_id"
                ref="ssi_master_data_mixin.mixin_master_data_view_tree"
            />
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data>
                </data>
            </field>
        </record>

        <!-- Form View -->
        <record id="risk_limit_item_view_form" model="ir.ui.view">
            <field name="name">risk_limit_item - form</field>
            <field name="model">risk_limit_item</field>
            <field name="mode">primary</field>
            <field
                name="inherit_id"
                ref="ssi_master_data_mixin.mixin_master_data_view_form"
            />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[1]" position="before">
                        <page name="source_computation" string="Source Computation">
                            <group name="source_computation_1" colspan="4" col="2">
                                <field name="model_id" />
                                <field name="model" />
                                <field
                                    name="partner_field_id"
                                    domain="[('model_id','=',model_id),('ttype','=','many2one'),('relation','=','res.partner')]"
                                />
                                <field
                                    name="amount_field_id"
                                    domain="[('model_id','=',model_id),('ttype','in',['float','int','monetary'])]"
                                />
                                <field
                                    name="domain"
                                    widget="domain"
                                    options="{'model': 'model', 'in_dialog': True}"
                                />
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <!-- Window Action -->
        <record id="risk_limit_item_action" model="ir.actions.act_window">
            <field name="name">Risk Limit Items</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">risk_limit_item</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem
            id="risk_limit_item_menu"
            name="Risk Limit Items"
            action="risk_limit_item_action"
            groups="ssi_risk_limit.risk_limit_item_configurator"
            parent="menu_risk_limit_config"
        />
    </data>
</odoo>
