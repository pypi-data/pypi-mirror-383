<odoo>
    <data>
        <!-- Search View -->
        <record id="risk_limit_assignment_view_search" model="ir.ui.view">
            <field name="name">risk_limit_assignment - search</field>
            <field name="model">risk_limit_assignment</field>
            <field
                name="inherit_id"
                ref="ssi_transaction_mixin.mixin_transaction_view_search"
            />
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='user_id']" position='after'>
                        <field name="batch_id" />
                        <field name="partner_id" />
                        <field name="contact_partner_id" />
                        <field name="date" />
                        <field name="type_id" />
                    </xpath>
                    <xpath expr="//filter[@name='grp_state']" position="after">
                        <filter
                            name="grp_batch"
                            string="# Batch Assignment"
                            context="{'group_by':'batch_id'}"
                        />
                        <filter
                            name="grp_partner"
                            string="Partner"
                            context="{'group_by':'partner_id'}"
                        />
                        <filter
                            name="grp_contact"
                            string="Contact"
                            context="{'group_by':'contact_partner_id'}"
                        />
                        <filter
                            name="grp_date"
                            string="Date"
                            context="{'group_by':'date'}"
                        />
                        <filter
                            name="grp_type"
                            string="Type"
                            context="{'group_by':'type_id'}"
                        />
                    </xpath>
                </data>
            </field>
        </record>

        <!-- Tree View -->
        <record id="risk_limit_assignment_view_tree" model="ir.ui.view">
            <field name="name">risk_limit_assignment - tree</field>
            <field name="model">risk_limit_assignment</field>
            <field
                name="inherit_id"
                ref="ssi_transaction_mixin.mixin_transaction_view_tree"
            />
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='company_id']" position="after">
                        <field name="batch_id" />
                        <field name="partner_id" widget="many2one_avatar" />
                        <field
                            name="contact_partner_id"
                            widget="many2one_avatar"
                            optional="hide"
                        />
                        <field name="date" />
                        <field name="type_id" />
                    </xpath>
                </data>
            </field>
        </record>

        <!-- Form View -->
        <record id="risk_limit_assignment_view_form" model="ir.ui.view">
            <field name="name">risk_limit_assignment - form</field>
            <field name="model">risk_limit_assignment</field>
            <field name="mode">primary</field>
            <field
                name="inherit_id"
                ref="ssi_transaction_mixin.mixin_transaction_view_form"
            />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='user_id']" position="after">
                        <field name="batch_id" />
                        <field name="type_id" />
                    </xpath>
                    <xpath expr="//group[@name='header_right']" position="inside">
                        <field
                            name="allowed_partner_ids"
                            widget="many2many_tags"
                            invisible="1"
                        />
                        <field
                            name="partner_id"
                            widget="many2one_avatar"
                            domain="[('id','in',allowed_partner_ids)]"
                        />
                        <field
                            name="allowed_contact_ids"
                            widget="many2many_tags"
                            invisible="1"
                        />
                        <field
                            name="contact_partner_id"
                            widget="many2one_avatar"
                            domain="[('id','in',allowed_contact_ids)]"
                        />
                        <field name="date" />
                    </xpath>
                    <xpath expr="//page[1]" position="before">
                        <page name="detail" string="Details">
                            <button
                                name="action_compute_item"
                                string="Item"
                                type="object"
                                class="oe_highlight"
                                icon="fa-refresh"
                                style="margin-right:4px"
                                attrs="{'invisible':[('state','!=','draft')]}"
                            />
                            <button
                                name="action_compute_amount"
                                string="Amount"
                                type="object"
                                class="oe_highlight"
                                icon="fa-calculator"
                                attrs="{'invisible':[('state','!=','open')]}"
                            />
                            <separator string="Single" colspan="2" />
                            <field name="detail_ids">
                                <tree
                                    editable="top"
                                    create="false"
                                    edit="true"
                                    delete="false"
                                >
                                    <field name="item_id" />
                                    <field
                                        name="restrict_single"
                                        widget="boolean_toggle"
                                    />
                                    <field name="currency_id" />
                                    <field name="amount" />
                                    <field name="amount_usage" />
                                    <field name="amount_residual" />
                                </tree>
                                <form>
                                    <group name="detail_1" colspan="4" col="2">
                                        <group name="detail_1_1" colspan="1" col="2">
                                            <field name="item_id" />
                                            <field
                                                name="restrict_single"
                                                widget="boolean_toggle"
                                            />
                                            <field name="currency_id" />
                                        </group>
                                        <group name="detail_1_2" colspan="1" col="2">
                                            <field name="amount" />
                                            <field name="amount_usage" />
                                            <field name="amount_residual" />
                                        </group>
                                    </group>
                                </form>
                            </field>
                            <separator string="Composite" colspan="2" />
                            <field name="composite_detail_ids">
                                <tree
                                    editable="top"
                                    create="false"
                                    edit="true"
                                    delete="false"
                                >
                                    <field name="item_ids" widget="many2many_tags" />
                                    <field
                                        name="detail_ids"
                                        widget="many2many_tags"
                                        invisible="1"
                                    />
                                    <field name="currency_id" />
                                    <field name="amount" />
                                    <field name="amount_usage" />
                                    <field name="amount_residual" />
                                </tree>
                                <form>
                                    <group name="composite_1" colspan="4" col="2">
                                        <group name="composite_1_1" colspan="1" col="2">
                                            <field
                                                name="item_ids"
                                                widget="many2many_tags"
                                            />
                                            <field
                                                name="detail_ids"
                                                widget="many2many_tags"
                                                invisible="1"
                                            />
                                            <field name="currency_id" />
                                        </group>
                                        <group name="composite_1_2" colspan="1" col="2">
                                            <field name="amount" />
                                            <field name="amount_usage" />
                                            <field name="amount_residual" />
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <!-- Window Action -->
        <record id="risk_limit_assignment_action" model="ir.actions.act_window">
            <field name="name">Risk Limit Assignments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">risk_limit_assignment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem
            id="risk_limit_assignment_menu"
            name="Risk Limit Assignments"
            action="risk_limit_assignment_action"
            groups="ssi_risk_limit.risk_limit_assignment_viewer_group"
            parent="menu_risk_limit_header"
            sequence="10"
        />
    </data>
</odoo>
