#!/usr/bin/env bash
#MISE description="Lint code (ruff check + format check)"

set -euo pipefail

echo "âš™ï¸ Running linting..."

status=0

# Run ruff check
echo "ğŸ”§ Running ruff check..."
uv run --group dev ruff check pytest_once/ tests/ || status=1

# Run ruff format check
echo "ğŸ”§ Running ruff format check..."
uv run --group dev ruff format --check pytest_once/ tests/ || status=1

if [ $status -ne 0 ]; then
    echo "âŒ Linting failed"
    exit $status
fi

echo "âœ… Linting passed!"
