# Basic
PROJECT_NAME="Faster APP"
VERSION="0.0.1"
DEBUG=true  # true/false

# Binding Host and Port
HOST="0.0.0.0"
PORT=8000

API_V1_STR="/api/v1"  # api version

SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"     # jwt algorithm
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Production Database
DB_TYPE="SQLITE"    # SQLITE/POSTGRES
DB_ENGINE="tortoise.backends.asyncpg"
DB_HOST="localhost"
DB_PORT=5432
DB_USER="postgres"
DB_PASSWORD="postgres"
DB_DATABASE="faster_app"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="JSON"   # STRING/JSON
