include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include requirements*.txt
include pyproject.toml
include *.npy
include *.gpkg

# Include gridder module
recursive-include gridder *.py

# Include geo_vtk module
recursive-include geo_vtk *.py
