root = true

[*]
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Disable rules for VS Code settings files
[.vscode/**]
indent_style = unset
charset = unset
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
