{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/nesono/repo_structure.git/config.schema.json",
  "$defs": {
    "directory_entry_item": {
      "type": "object",
      "properties": {
        "require": { "type": "string" },
        "allow": { "type": "string" },
        "forbid": { "type": "string" },
        "if_exists": { "$ref": "#/$defs/if_exists_entries" },
        "use_rule": { "type": "string" },
        "companion": { "$ref": "#/$defs/companion_entries" }
      },
      "additionalProperties": false,
      "anyOf": [
        { "required": ["require"] },
        { "required": ["allow"] },
        { "required": ["forbid"] }
      ]
    },
    "companion_entries": {
      "type": "array",
      "items": { "$ref": "#/$defs/directory_entry_item" }
    },
    "if_exists_entries": {
      "type": "array",
      "items": { "$ref": "#/$defs/directory_entry_item" }
    },
    "directory_entries": {
      "type": "array",
      "minItems": 1,
      "prefixItems": [
        {
          "type": "object",
          "properties": {
            "description": { "type": "string" }
          },
          "required": ["description"],
          "additionalProperties": false
        }
      ],
      "items": { "$ref": "#/$defs/directory_entry_item" }
    },
    "directory_map_entry": {
      "type": "array",
      "minItems": 1,
      "prefixItems": [
        {
          "type": "object",
          "properties": {
            "description": { "type": "string" }
          },
          "required": ["description"],
          "additionalProperties": false
        }
      ],
      "items": {
        "type": "object",
        "properties": {
          "use_rule": { "type": "string" },
          "use_template": { "type": "string" },
          "parameters": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "additionalProperties": false,
        "anyOf": [
          { "required": ["use_rule"] },
          { "required": ["use_template", "parameters"] }
        ],
        "dependentSchemas": {
          "use_rule": {
            "properties": {
              "parameters": { "type": "null" }
            }
          },
          "use_template": {
            "properties": {
              "parameters": { "type": "object" }
            }
          }
        }
      }
    }
  },
  "title": "Repo Structure Configuration JSON Schema",
  "type": "object",
  "properties": {
    "structure_rules": {
      "description": "Contains named structure rules specifying allowed and required directory entries and are mapped to directories through the directory_map",
      "type": "object",
      "patternProperties": {
        "^(?!__).*": { "$ref": "#/$defs/directory_entries" }
      },
      "additionalProperties": false
    },
    "templates": {
      "description": "Contains named templates that are expanded by usage in the directory_map into structure rules",
      "type": "object",
      "patternProperties": {
        "^(?!__).*": { "$ref": "#/$defs/directory_entries" }
      },
      "additionalProperties": false
    },
    "directory_map": {
      "type": "object",
      "patternProperties": {
        "^/.*/$|^/$": { "$ref": "#/$defs/directory_map_entry" }
      },
      "additionalProperties": false
    }
  },
  "required": ["directory_map"],
  "anyOf": [{ "required": ["structure_rules"] }, { "required": ["templates"] }]
}
