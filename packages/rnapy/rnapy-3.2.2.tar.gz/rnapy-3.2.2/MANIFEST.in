# Include the license and readme
include LICENSE
include README.md
include requirements.txt
include pyproject.toml

# Include configuration files
recursive-include rnapy/configs *.yaml *.yml
recursive-include configs *.yaml *.yml

# Include data files
recursive-include rnapy/data *
recursive-include rnapy **/*.yaml **/*.yml

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include demo files but exclude large model files
recursive-include demos *.py *.yaml *.yml
recursive-include demos/configs *.yaml *.yml
recursive-include demos/input *.pdb *.npy *.fasta *.fa *.fas
exclude demos/models/*
exclude demos/temp/*
exclude demos/results/*

# Exclude temporary, cache, and build directories
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .git*
global-exclude *.egg-info/*
global-exclude build/*
global-exclude dist/*
global-exclude temp/*
global-exclude .pytest_cache/*
global-exclude test_results/*
global-exclude *.log

# Exclude specific directories
prune rnapy/temp
prune temp
prune test_results
prune .git
prune __pycache__
prune *.egg-info 