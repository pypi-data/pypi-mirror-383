<odoo>
    <!-- Search View -->
    <record id="toll_manufacturing_order_bom_view_search" model="ir.ui.view">
        <field name="name">toll_manufacturing_order_bom - search</field>
        <field name="model">toll_manufacturing_order_bom</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <!-- Tree View -->
    <record id="toll_manufacturing_order_bom_view_tree" model="ir.ui.view">
        <field name="name">toll_manufacturing_order_bom - tree</field>
        <field name="model">toll_manufacturing_order_bom</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="after">
                </xpath>
            </data>
        </field>
    </record>

    <!-- Form View -->
    <record id="toll_manufacturing_order_bom_view_form" model="ir.ui.view">
        <field name="name">toll_manufacturing_order_bom - form</field>
        <field name="model">toll_manufacturing_order_bom</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='active']" position="after">
                </xpath>
            </data>
        </field>
    </record>

    <!-- Action -->
    <record id="toll_manufacturing_order_bom_action" model="ir.actions.act_window">
        <field name="name">Toll Manufacturing Order BOMs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">toll_manufacturing_order_bom</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="toll_manufacturing_order_bom_menu"
        name="Toll Manufacturing Order BOMs"
        action="toll_manufacturing_order_bom_action"
        groups="ssi_toll_manufacturing.toll_manufacturing_order_bom_configurator_group"
        parent="mrp.menu_mrp_configuration"
    />
</odoo>
