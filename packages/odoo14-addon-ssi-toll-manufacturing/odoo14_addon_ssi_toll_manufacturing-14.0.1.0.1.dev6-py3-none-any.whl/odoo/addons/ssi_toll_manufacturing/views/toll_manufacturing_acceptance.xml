<odoo>
    <!-- Search View -->
    <record id="toll_manufacturing_acceptance_view_search" model="ir.ui.view">
        <field name="name">toll_manufacturing_acceptance - search</field>
        <field name="model">toll_manufacturing_acceptance</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <!-- Tree View -->
    <record id="toll_manufacturing_acceptance_view_tree" model="ir.ui.view">
        <field name="name">toll_manufacturing_acceptance - tree</field>
        <field name="model">toll_manufacturing_acceptance</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="date" />
                    <field name="batch_acceptance_id" />
                    <field name="order_id" />
                    <field name="partner_id" />
                    <field name="contact_partner_id" optional="hide" />
                    <field name="product_id" />
                    <field name="quantity" />
                    <field name="uom_id" optional="hide" />
                    <field name="currency_id" invisible="1" />
                    <field
                        name="amount_supplier_procured_raw_material"
                        optional="hide"
                        string="Supplier Procured Raw Material"
                        sum="Total Supplier Procured Raw Material"
                    />
                    <field
                        name="amount_processing_fee"
                        optional="hide"
                        string="Processing Fee"
                        sum="Total Processing Fee"
                    />
                    <field
                        name="amount_untaxed"
                        string="Untaxed"
                        sum="Total Untaxed"
                        optional="hide"
                    />
                    <field
                        name="amount_tax"
                        string="Tax"
                        sum="Total Tax"
                        optional="hide"
                    />
                    <field name="amount_total" string="Total" sum="Total" />
                </xpath>
            </data>
        </field>
    </record>

    <!-- Form View -->
    <record id="toll_manufacturing_acceptance_view_form" model="ir.ui.view">
        <field name="name">toll_manufacturing_acceptance - form</field>
        <field name="model">toll_manufacturing_acceptance</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="batch_acceptance_id" string="# Batch TMA" />
                    <field name="order_id" string="# TMO" />
                    <field name="currency_id" />
                    <field name="partner_id" />
                    <field name="contact_partner_id" />
                </xpath>
                <xpath expr="//group[@name='header_right']" position="inside">
                    <field name="date" />
                    <field name="product_id" />
                    <label for="quantity" string="Quantity" />
                    <div>
                        <field name="quantity" class="oe_inline" />
                        <field name="uom_id" class="oe_inline" />
                    </div>
                    <field name="qty_to_receive" />
                    <field name="qty_received" />
                </xpath>
                <xpath expr="//page[1]" position="before">
                    <page name="raw_material" string="Raw Materials">
                        <separator string="Customer Supplied" />
                        <button
                            name="action_load_customer_supplied_raw_material"
                            string="Load"
                            type="object"
                            help="Load Customer Supplied Raw Material from related Toll Manufacturing Order"
                            class="oe_highlight"
                            icon="fa-refresh"
                            attrs="{'invisible':[('state','!=','draft')]}"
                        />
                        <field name="customer_supplied_raw_material_ids">
                            <tree>
                                <field name="product_id" />
                                <field name="name" />
                                <field name="uom_quantity" />
                                <field name="uom_id" />
                                <field name="qty_to_consume" />
                                <field name="qty_consumed" />
                                <field name="currency_id" invisible="1" />
                                <field name="total_cost" />
                            </tree>
                            <form>
                                <field
                                    name="allowed_uom_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                                <group name="detail_1" colspan="4" col="2">
                                    <group name="detail_1_1" colspan="1" col="2">
                                        <field name="product_id" />
                                        <field name="name" />
                                    </group>
                                    <group name="detail_1_1" colspan="1" col="2">
                                        <label for="uom_quantity" />
                                        <div>
                                            <field name="uom_quantity" />
                                            <field
                                                name="uom_id"
                                                domain="[('id','in',allowed_uom_ids)]"
                                                attrs="{'required':[('product_id','!=',False)]}"
                                                class="oe_inline"
                                            />
                                        </div>
                                        <field name="quantity" invisible="1" />
                                    </group>
                                </group>
                                <notebook>
                                    <page name="quantity" string="Quantity">
                                        <group name="quantity_1" colspan="4" col="2">
                                            <field name="qty_to_consume" />
                                            <field name="qty_consumed" />
                                            <field name="currency_id" invisible="1" />
                                            <field name="total_cost" />
                                        </group>
                                        <field name="stock_move_ids" />
                                    </page>
                                </notebook>
                            </form>
                        </field>
                        <group
                            name="customer_supplied_rm_total_cost_1"
                            colspan="4"
                            col="2"
                        >
                            <field
                                name="customer_supplied_rm_total_cost"
                                readonly="1"
                                string="Total RM Cost"
                            />
                        </group>
                        <separator string="Supplier Procured" />
                        <button
                            name="action_load_supplier_procured_raw_material"
                            string="Load"
                            type="object"
                            class="oe_highlight"
                            icon="fa-refresh"
                            help="Load Supplier Procured Raw Material from related Toll Manufacturing Order"
                            attrs="{'invisible':[('state','!=','draft')]}"
                        />
                        <field name="supplier_procured_raw_material_ids">
                            <tree>
                                <field name="currency_id" invisible="1" />
                                <field name="product_id" />
                                <field name="usage_id" optional="hide" />
                                <field name="account_id" optional="hide" />
                                <field name="name" />
                                <field name="analytic_account_id" optional="show" />
                                <field name="price_unit" />
                                <field name="uom_quantity" />
                                <field name="uom_id" />
                                <field name="price_subtotal" />
                            </tree>
                            <form>
                                <field name="currency_id" invisible="1" />
                                <field
                                    name="allowed_uom_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                                <group name="detail_1" colspan="4" col="2">
                                    <group name="detail_1_1" colspan="1" col="2">
                                        <field name="product_id" />
                                        <field name="name" />
                                        <field name="usage_id" />
                                        <field name="account_id" />
                                        <field name="analytic_account_id" />
                                    </group>
                                    <group name="detail_1_1" colspan="1" col="2">
                                        <field name="pricelist_id" />
                                        <label for="uom_quantity" />
                                        <div>
                                            <field name="uom_quantity" />
                                            <field
                                                name="uom_id"
                                                domain="[('id','in',allowed_uom_ids)]"
                                                attrs="{'required':[('product_id','!=',False)]}"
                                                class="oe_inline"
                                            />
                                        </div>
                                        <field name="quantity" invisible="1" />
                                        <field name="price_unit" />
                                        <field name="price_subtotal" />
                                    </group>
                                </group>
                                <notebook>
                                    <page
                                        name="standard_price"
                                        string="Standard Price"
                                        attrs="{'invisible':[('pricelist_id','=',False)]}"
                                    >
                                        <group
                                            name="standard_price"
                                            colspan="4"
                                            col="2"
                                        >
                                            <group
                                                name="standard_price_1"
                                                string="Price Unit"
                                                colspan="1"
                                                col="2"
                                            >
                                                <field
                                                    name="standard_price_unit"
                                                    string="Sarndard"
                                                />
                                                <field
                                                    name="standard_price_unit_diff"
                                                    string="Diff."
                                                />
                                            </group>
                                            <group
                                                name="standard_price_2"
                                                string="Price Subtotal"
                                                colspan="1"
                                                col="2"
                                            >
                                                <field
                                                    name="standard_price_subtotal"
                                                    string="Standard"
                                                />
                                                <field
                                                    name="standard_price_subtotal_diff"
                                                    string="Diff."
                                                />
                                            </group>
                                        </group>
                                    </page>

                                </notebook>
                            </form>
                        </field>
                    </page>
                    <page name="processing_fee" string="Processing Fee">
                        <button
                            name="action_load_processing_fee"
                            string="Load"
                            type="object"
                            class="oe_highlight"
                            icon="fa-refresh"
                            help="Load Processing Fee from related Toll Manufacturing Order"
                            attrs="{'invisible':[('state','!=','draft')]}"
                        />
                        <field
                            name="processing_fee_ids"
                            context="{'default_currency_id': currency_id}"
                        >
                            <tree>
                                <field name="currency_id" invisible="1" />
                                <field name="product_id" />
                                <field name="usage_id" optional="hide" />
                                <field name="account_id" optional="hide" />
                                <field name="name" />
                                <field name="analytic_account_id" optional="show" />
                                <field name="price_unit" />
                                <field name="uom_quantity" />
                                <field name="uom_id" />
                                <field name="price_subtotal" />
                            </tree>
                            <form>
                                <field name="currency_id" invisible="1" />
                                <field
                                    name="allowed_uom_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                                <group name="detail_1" colspan="4" col="2">
                                    <group name="detail_1_1" colspan="1" col="2">
                                        <field name="product_id" />
                                        <field name="name" />
                                        <field name="usage_id" />
                                        <field name="account_id" />
                                        <field name="analytic_account_id" />
                                    </group>
                                    <group name="detail_1_1" colspan="1" col="2">
                                        <field name="pricelist_id" />
                                        <label for="uom_quantity" />
                                        <div>
                                            <field name="uom_quantity" />
                                            <field
                                                name="uom_id"
                                                domain="[('id','in',allowed_uom_ids)]"
                                                attrs="{'required':[('product_id','!=',False)]}"
                                                class="oe_inline"
                                            />
                                        </div>
                                        <field name="quantity" invisible="1" />
                                        <field name="price_unit" />
                                        <field name="price_subtotal" />
                                    </group>
                                </group>
                                <notebook>
                                    <page
                                        name="standard_price"
                                        string="Standard Price"
                                        attrs="{'invisible':[('pricelist_id','=',False)]}"
                                    >
                                        <group
                                            name="standard_price"
                                            colspan="4"
                                            col="2"
                                        >
                                            <group
                                                name="standard_price_1"
                                                string="Price Unit"
                                                colspan="1"
                                                col="2"
                                            >
                                                <field
                                                    name="standard_price_unit"
                                                    string="Sarndard"
                                                />
                                                <field
                                                    name="standard_price_unit_diff"
                                                    string="Diff."
                                                />
                                            </group>
                                            <group
                                                name="standard_price_2"
                                                string="Price Subtotal"
                                                colspan="1"
                                                col="2"
                                            >
                                                <field
                                                    name="standard_price_subtotal"
                                                    string="Standard"
                                                />
                                                <field
                                                    name="standard_price_subtotal_diff"
                                                    string="Diff."
                                                />
                                            </group>
                                        </group>
                                    </page>
                                </notebook>
                            </form>
                        </field>
                    </page>
                    <page name="procurement" string="Procurement">
                        <button
                            name="action_create_rm_consumption"
                            string="Create RM Consumption"
                            type="object"
                            class="oe_highlight"
                            icon="fa-gear"
                            help="Create Raw Material Consumption"
                            style="margin-right:4px"
                            attrs="{'invisible':[('qty_received','!=',0.0)]}"
                        />
                        <button
                            name="action_create_fg_reception"
                            string="Create FG Reception"
                            type="object"
                            icon="fa-gear"
                            help="Create Finished Goods Reception"
                            class="oe_highlight"
                            attrs="{'invisible':[('state','!=','open')]}"
                        />
                        <group name="procurement_1" colspan="4" col="2">
                            <field name="procurement_group_id" readonly="1" />
                            <field name="warehouse_id" />
                            <field name="location_id" />
                            <field name="destination_location_id" />
                            <field name="raw_material_route_id" />
                            <field name="finished_product_route_id" />
                        </group>
                        <separator string="Stock Moves" />
                        <field name="fg_stock_move_ids" />
                    </page>
                    <page name="cost" string="Costing">
                        <group name="cost_1" colspan="4" col="2">
                            <field name="total_cost" />
                            <field name="unit_cost" />
                        </group>
                    </page>
                </xpath>
                <xpath expr="//group[@name='footer_left']" position="inside">
                    <separator string="Total Bill" />
                    <field
                        name="amount_supplier_procured_raw_material"
                        string="Supplier Procured Raw Material"
                    />
                    <field name="amount_processing_fee" string="Processing Fee" />
                    <field name="amount_untaxed" string="Untaxed" />
                    <field name="amount_tax" string="Tax" />
                    <field name="amount_total" string="Total" />
                </xpath>
            </data>
        </field>
    </record>

    <!-- Action -->
    <record id="toll_manufacturing_acceptance_action" model="ir.actions.act_window">
        <field name="name">Toll Manufacturing Acceptances</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">toll_manufacturing_acceptance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="toll_manufacturing_acceptance_menu"
        name="Acceptances"
        action="toll_manufacturing_acceptance_action"
        groups="ssi_toll_manufacturing.toll_manufacturing_acceptance_viewer_group"
        parent="menu_toll_manufacturing_header"
        sequence="40"
    />
</odoo>
