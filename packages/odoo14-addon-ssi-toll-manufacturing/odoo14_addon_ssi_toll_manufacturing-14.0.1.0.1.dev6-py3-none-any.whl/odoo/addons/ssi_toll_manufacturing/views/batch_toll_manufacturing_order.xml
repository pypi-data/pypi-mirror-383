<odoo>
    <!-- Search View -->
    <record id="batch_toll_manufacturing_order_view_search" model="ir.ui.view">
        <field name="name">batch_toll_manufacturing_order - search</field>
        <field name="model">batch_toll_manufacturing_order</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <!-- Tree View -->
    <record id="batch_toll_manufacturing_order_view_tree" model="ir.ui.view">
        <field name="name">batch_toll_manufacturing_order - tree</field>
        <field name="model">batch_toll_manufacturing_order</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="date" />
                    <field name="type_id" />
                    <field name="partner_id" />
                    <field name="contact_partner_id" optional="hide" />
                    <field name="currency_id" />
                    <field
                        name="amount_supplier_procured_raw_material"
                        optional="hide"
                        string="Supplier Procured Raw Material"
                        sum="Total Supplier Procured Raw Material"
                    />
                    <field
                        name="amount_processing_fee"
                        optional="hide"
                        string="Processing Fee"
                        sum="Total Processing Fee"
                    />
                    <field name="amount_untaxed" string="Untaxed" sum="Total Untaxed" />
                    <field name="amount_tax" string="Tax" sum="Total Tax" />
                    <field name="amount_total" string="Total" sum="Total" />
                </xpath>
            </data>
        </field>
    </record>

    <!-- Form View -->
    <record id="batch_toll_manufacturing_order_view_form" model="ir.ui.view">
        <field name="name">batch_toll_manufacturing_order - form</field>
        <field name="model">batch_toll_manufacturing_order</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="type_id" />
                    <field name="partner_id" widget="many2one_avatar" />
                    <field
                        name="allowed_contact_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                    <field
                        name="contact_partner_id"
                        widget="many2one_avatar"
                        domain="[('id','in',allowed_contact_ids)]"
                    />
                </xpath>
                <xpath expr="//group[@name='header_right']" position="inside">
                    <field name="date" />
                    <field name="currency_id" />
                </xpath>
                <xpath expr="//page[1]" position="before">
                    <page name="order" string="Orders">
                        <field name="order_ids" />
                    </page>
                    <page name="acceptance" string="Acceptances">
                        <field name="batch_toll_manufacturing_acceptance_ids" />
                    </page>
                </xpath>
                <xpath expr="//group[@name='footer_left']" position="inside">
                    <separator string="Total Bill" />
                    <field
                        name="amount_supplier_procured_raw_material"
                        string="Supplier Procured Raw Material"
                    />
                    <field name="amount_processing_fee" string="Processing Fee" />
                    <field name="amount_untaxed" string="Untaxed" />
                    <field name="amount_tax" string="Tax" />
                    <field name="amount_total" string="Total" />
                </xpath>
            </data>
        </field>
    </record>

    <!-- Action -->
    <record id="batch_toll_manufacturing_order_action" model="ir.actions.act_window">
        <field name="name">Batch Toll Manufacturing Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">batch_toll_manufacturing_order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="batch_toll_manufacturing_order_menu"
        name="Batch Orders"
        action="batch_toll_manufacturing_order_action"
        groups="ssi_toll_manufacturing.batch_toll_manufacturing_order_viewer_group"
        parent="menu_toll_manufacturing_header"
        sequence="10"
    />
</odoo>
