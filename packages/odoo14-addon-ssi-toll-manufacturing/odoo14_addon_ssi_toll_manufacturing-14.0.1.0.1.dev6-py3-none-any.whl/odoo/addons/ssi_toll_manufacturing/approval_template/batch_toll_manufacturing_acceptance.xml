<odoo>
    <record
        id="approval_template_batch_toll_manufacturing_acceptance"
        model="approval.template"
    >
        <field name="name">Standard</field>
        <field name="model_id" ref="model_batch_toll_manufacturing_acceptance" />
        <field name="sequence" eval="100" />
        <field name="computation_method">use_python</field>
        <field name="python_code">result = True</field>
        <field name="validate_sequence" eval="1" />
    </record>

    <record
        id="approval_template_detail_batch_toll_manufacturing_acceptance"
        model="approval.template_detail"
    >
        <field
            name="template_id"
            ref="approval_template_batch_toll_manufacturing_acceptance"
        />
        <field name="approver_selection_method">use_group</field>
        <field
            name="approver_group_ids"
            eval="[(6,0,[ref('ssi_toll_manufacturing.batch_toll_manufacturing_acceptance_validator_group')])]"
        />
    </record>
</odoo>
