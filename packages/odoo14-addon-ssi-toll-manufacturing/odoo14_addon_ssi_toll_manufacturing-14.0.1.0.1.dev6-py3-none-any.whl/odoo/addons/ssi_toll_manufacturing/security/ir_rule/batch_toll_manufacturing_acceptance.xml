<odoo>
    <record id="batch_toll_manufacturing_acceptance_internal_user_rule" model="ir.rule">
        <field name="name">batch_toll_manufacturing_acceptance - Internal User</field>
        <field name="model_id" ref="model_batch_toll_manufacturing_acceptance" />
        <field name="groups" eval="[(6, 0, [ref('base.group_user')])]" />
        <field name="domain_force">[("user_id","=",user.id)]</field>
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_unlink" eval="1" />
    </record>
    <record id="batch_toll_manufacturing_acceptance_company_rule" model="ir.rule">
        <field
            name="name"
        >batch_toll_manufacturing_acceptance - Responsible to company data</field>
        <field name="model_id" ref="model_batch_toll_manufacturing_acceptance" />
        <field
            name="groups"
            eval="[(6, 0, [ref('ssi_toll_manufacturing.batch_toll_manufacturing_acceptance_company_group')])]"
        />
        <field name="domain_force">[("company_id","=",user.company_id.id)]</field>
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_unlink" eval="1" />
    </record>
    <record id="batch_toll_manufacturing_acceptance_child_company_rule" model="ir.rule">
        <field
            name="name"
        >batch_toll_manufacturing_acceptance - Responsible to company and all child companies data</field>
        <field name="model_id" ref="model_batch_toll_manufacturing_acceptance" />
        <field
            name="groups"
            eval="[(6, 0, [ref('ssi_toll_manufacturing.batch_toll_manufacturing_acceptance_child_company_group')])]"
        />
        <field name="domain_force">[("company_id","in",user.company_ids.ids)]</field>
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_unlink" eval="1" />
    </record>
    <record id="batch_toll_manufacturing_acceptance_all_rule" model="ir.rule">
        <field
            name="name"
        >batch_toll_manufacturing_acceptance - Responsible to all data</field>
        <field name="model_id" ref="model_batch_toll_manufacturing_acceptance" />
        <field
            name="groups"
            eval="[(6, 0, [ref('ssi_toll_manufacturing.batch_toll_manufacturing_acceptance_all')])]"
        />
        <field name="domain_force">[(1,"=",1)]</field>
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_unlink" eval="1" />
    </record>
</odoo>
