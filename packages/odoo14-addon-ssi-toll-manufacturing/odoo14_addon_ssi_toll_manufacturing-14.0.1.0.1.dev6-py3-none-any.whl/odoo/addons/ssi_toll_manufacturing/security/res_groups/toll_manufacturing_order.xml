<odoo>
    <record id="toll_manufacturing_order_viewer_group" model="res.groups">
        <field name="name">Viewer</field>
        <field
            name="category_id"
            ref="ssi_toll_manufacturing.toll_manufacturing_order_workflow"
        />
    </record>
    <record id="toll_manufacturing_order_user_group" model="res.groups">
        <field name="name">User</field>
        <field
            name="category_id"
            ref="ssi_toll_manufacturing.toll_manufacturing_order_workflow"
        />
        <field
            name="implied_ids"
            eval="[(4, ref('ssi_toll_manufacturing.toll_manufacturing_order_viewer_group'))]"
        />
    </record>
    <record id="toll_manufacturing_order_validator_group" model="res.groups">
        <field name="name">Validator</field>
        <field
            name="category_id"
            ref="ssi_toll_manufacturing.toll_manufacturing_order_workflow"
        />
        <field
            name="implied_ids"
            eval="[(4, ref('ssi_toll_manufacturing.toll_manufacturing_order_user_group'))]"
        />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
    <record id="toll_manufacturing_order_company_group" model="res.groups">
        <field name="name">Company</field>
        <field
            name="category_id"
            ref="ssi_toll_manufacturing.toll_manufacturing_order_data_ownership"
        />
    </record>
    <record id="toll_manufacturing_order_child_company_group" model="res.groups">
        <field name="name">Company and All Child Companies</field>
        <field
            name="category_id"
            ref="ssi_toll_manufacturing.toll_manufacturing_order_data_ownership"
        />
        <field
            name="implied_ids"
            eval="[(4, ref('ssi_toll_manufacturing.toll_manufacturing_order_company_group'))]"
        />
    </record>
    <record id="toll_manufacturing_order_all" model="res.groups">
        <field name="name">All</field>
        <field
            name="category_id"
            ref="ssi_toll_manufacturing.toll_manufacturing_order_data_ownership"
        />
        <field
            name="implied_ids"
            eval="[(4, ref('ssi_toll_manufacturing.toll_manufacturing_order_company_group'))]"
        />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
</odoo>
