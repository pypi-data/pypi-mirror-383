<odoo>
<record id="policy_template_batch_toll_manufacturing_order" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_batch_toll_manufacturing_order" />
    <field
            name="state_field_id"
            search="[('model_id.model','=','batch_toll_manufacturing_order'),('name','=','state')]"
        />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- Confirm -->
<record
        id="policy_template_batch_toll_manufacturing_order_confirm"
        model="policy.template_detail"
    >
    <field name="template_id" ref="policy_template_batch_toll_manufacturing_order" />
    <field
            name="field_id"
            search="[('model_id.model','=','batch_toll_manufacturing_order'),('name','=','confirm_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','batch_toll_manufacturing_order'),('value','=','draft')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
            name="group_ids"
            eval="[(6,0,[ref('batch_toll_manufacturing_order_user_group')])]"
        />
    <field name="restrict_additional" eval="0" />
</record>

<!-- Reject -->
<record
        id="policy_template_batch_toll_manufacturing_order_reject"
        model="policy.template_detail"
    >
    <field name="template_id" ref="policy_template_batch_toll_manufacturing_order" />
    <field
            name="field_id"
            search="[('model_id.model','=','batch_toll_manufacturing_order'),('name','=','reject_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','batch_toll_manufacturing_order'),('value','=','confirm')]"
        />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

