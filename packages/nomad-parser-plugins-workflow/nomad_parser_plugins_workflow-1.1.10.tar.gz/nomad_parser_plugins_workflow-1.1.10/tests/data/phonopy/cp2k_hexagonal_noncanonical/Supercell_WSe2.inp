&GLOBAL
    PROJECT geo_opt_WSe2_EPS-10
    RUN_TYPE GEO_OPT
    PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
    METHOD Quickstep
    &DFT
        BASIS_SET_FILE_NAME BASIS_MOLOPT
        BASIS_SET_FILE_NAME ./BASIS_MOLOPT_UZH 
        POTENTIAL_FILE_NAME GTH_POTENTIALS
        &QS
	    METHOD GAPW
            EPS_DEFAULT 1e-12
        &END QS
        &POISSON
            PERIODIC XYZ
        &END POISSON
	&SCF
	      CHOLESKY OFF
	      &SMEAR
		  METHOD FERMI_DIRAC
		  ELECTRONIC_TEMPERATURE [K] 300
	      &END SMEAR
	      ADDED_MOS -1
	      SCF_GUESS RESTART
	      EPS_SCF 1.0E-10
	      MAX_SCF 500
	       &PRINT
		  &RESTART
		     &EACH
			QS_SCF 10
		     &END EACH
		  &END RESTART
	       &END PRINT
	      &MIXING
		  METHOD BROYDEN_MIXING
		  ALPHA 0.4
		  BETA 1.5
		  NBROYDEN 8
	      &END
	    &END SCF
        !&KPOINTS
        !    SCHEME GAMMA
        !&END KPOINTS
        &XC
	       &XC_GRID
		XC_DERIV NN10_SMOOTH
		XC_SMOOTH_RHO NN10
	       &END XC_GRID
		&XC_FUNCTIONAL PBE
		&END XC_FUNCTIONAL
		&VDW_POTENTIAL
			POTENTIAL_TYPE PAIR_POTENTIAL
			&PAIR_POTENTIAL
				TYPE DFTD3
				PARAMETER_FILE_NAME dftd3.dat
				REFERENCE_FUNCTIONAL PBE
				CALCULATE_C9_TERM T
			&END PAIR_POTENTIAL
		&END VDW_POTENTIAL
        &END XC
        &MGRID
            REL_CUTOFF 100
            CUTOFF 400
        &END MGRID
    &END DFT

    &SUBSYS
        &CELL
            A 11.792 20.42432 0
            B -11.792 20.42432 0
            C 0 0 27.5
            PERIODIC XYZ
        &END CELL
	&TOPOLOGY
		COORD_FILE_NAME geo_final.xyz
		COORD_FILE_FORMAT XYZ
	&END TOPOLOGY
        &KIND W
            BASIS_SET TZVP-MOLOPT-PBE-GTH-q14
            POTENTIAL GTH-PBE-q14
        &END KIND
        &KIND Se
            BASIS_SET TZVP-MOLOPT-PBE-GTH-q6
            POTENTIAL GTH-PBE-q6
        &END KIND
        &KIND Au
            BASIS_SET TZVP-MOLOPT-PBE-GTH-q11
            POTENTIAL GTH-PBE-q11
        &END KIND
    &END SUBSYS
&END FORCE_EVAL

&MOTION
    &GEO_OPT
	MAX_ITER    400
	OPTIMIZER   BFGS
	MAX_FORCE   1e-8
    &END GEO_OPT
    &CONSTRAINT
	&FIXED_ATOMS
		LIST 1..256
	&END FIXED_ATOMS
    &END CONSTRAINT
&END MOTION
