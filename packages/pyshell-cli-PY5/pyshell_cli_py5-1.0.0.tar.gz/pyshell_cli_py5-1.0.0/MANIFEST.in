# Include documentation files
include README.md
include LICENSE
include FUNCTIONAL_TESTS_SUMMARY.md
include install.sh

# Include resource files
recursive-include pyshell/resources *

# Include test files (optional - for development)
recursive-include pyshell/tests *.py

# Exclude compiled Python files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so

# Exclude version control files
global-exclude .git*
global-exclude .DS_Store

