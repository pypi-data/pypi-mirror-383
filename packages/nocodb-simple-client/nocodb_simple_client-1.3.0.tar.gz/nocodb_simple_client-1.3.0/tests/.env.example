# NocoDB Test Configuration
# Copy this file to .env in the tests folder and update with your NocoDB instance details

# NocoDB Server Configuration
NOCODB_BASE_URL=http://localhost:8080
NOCODB_TOKEN=your-api-token-here

# Optional: Project and Database Configuration
NOCODB_PROJECT_ID=your-project-id
NOCODB_DATABASE_ID=your-database-id

# Test Data Configuration
TEST_TABLE_PREFIX=test_
CLEANUP_TEST_DATA=true

# Test Settings
RUN_INTEGRATION_TESTS=true
SKIP_SLOW_TESTS=false
TEST_TIMEOUT=30

# File Upload Test Configuration (optional)
TEST_UPLOAD_DIR=./test_uploads
MAX_FILE_SIZE_MB=1

# Performance Test Configuration
PERFORMANCE_TEST_RECORDS=1000
BULK_TEST_BATCH_SIZE=100
